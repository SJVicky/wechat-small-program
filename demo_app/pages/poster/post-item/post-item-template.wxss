.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
  margin-bottom: 15rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
